<%- include('includes/header') %>

    <link rel="stylesheet" href="/css/login.css" type="text/css">

    <body>
        <form class="login_container" action="/resto/login" method="POST">
            <!-- get is also okay -->
            <div class="login_frame" style="height: 460px">

                <div class="login_top">
                    <span>Log in</span>
                    <div>
                        Go to <a href="/resto" style="color: #6440fb">Home</a> page. 
                    </div>
                    <p>
                        You need to <a href="/resto/sign-up" style="color: #6440fb">sign up</a> up first. 
                    </p>
                </div>

                <div class="login_input_frame">
                    <div class="login_input_container">
                        <label for="">User name:</label>
                        <input type="text" name="mb_nick" placeholder="Input your name" value="" required />
                    </div>
                    <div class="login_input_container"></div>

                    <div class="login_input_container">
                        <label for="">User password:</label>
                        <input type="password" name="mb_password" placeholder="Input your password" value="" required />
                    </div>
                </div>

                <button class="login_btn btn" name="login" type="submit">Log in</button>

            </div>
        </form>
    </body>

    <%- include('includes/footer') %>